%h1.text-center= t "devise.invitations.new.header"

= bootstrap_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f|
  = render 'layouts/error_messages', object: resource

  .field
    = f.email_field :email
  .field
    = f.text_field :firstName
  .field
    = f.text_field :lastName

  %p= f.submit t("devise.invitations.new.submit_button")
