!!! 5
%html
  %head
    %title AssessMe
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    = javascript_include_tag 'application'
    = javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
  %body{"data-controller": controller.controller_name, "data-action": controller.action_name}
    %nav.navbar.navbar-default
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{:type => "button", :"data-toggle" => "collapse", :"data-target" => "#navbar", :"aria-expanded" => false, :"aria-controls" => "navbar"}
            .sr-only
              Toggle navigation
            .icon-bar
            .icon-bar
            .icon-bar
          %a.navbar-brand{ :href => root_url} AssessMe
        %div#navbar.navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li= link_to "Gestion des utilisateurs", users_path if can? :manage, User
            %li= link_to "Inviter des utilisateurs", new_user_invitation_path if can? :invite, User
            %li= link_to "Gérer mes matières", disciplines_path if can? :manage, Discipline
            %li= link_to "Gérer mes examens", exams_path if can? :manage, Exam
            %li= link_to "Consulter mes notes", my_grades_path if can? :get_student_grades, Assessment
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Se déconnecter", destroy_session_path("user") if user_signed_in?
            %li= link_to "Se connecter", new_session_path("user") unless user_signed_in?
            %li= link_to "S'enregistrer", new_registration_path("user") unless user_signed_in?
    #main-content
      .container
        #flash_messages
          - flash.each do |key, value|
            %div{:class => "flash #{key} alert alert-dismissable alert-#{key == 'notice' ? 'success' : 'danger'} "}
              %a{:href => "#", :class => "close", :"data-dismiss" => "alert", :"aria-label" => "close"}
                &times;
              = value

        = yield
    %footer
      .container
        Projet IPW
        %br
        Pierre Contal, Pierre Genthon - 2017